{
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
      "no-console": "off",
      "import/no-unresolved": ["error", { "commonjs": false }],
      "no-use-before-define": ["error", {"functions": false, "classes": false}],
      "import/no-extraneous-dependencies":
        ["error", {"devDependencies": ["**/*test.js"]}]
    }
}
